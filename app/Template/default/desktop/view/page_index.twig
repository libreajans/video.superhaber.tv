					<img
						src="{{G_IMGLINK_APP}}lazy.png"
						data-src="{{index_manset[1].content_image_url}}"
						alt="{{index_manset[1].content_title}}"
						width="320" height="182"
					/>
					<figcaption class="video-manset-image-caption">
						<div class="video-manset-play"></div>
						<div class="video-manset-title">{{index_manset[1].content_title}}</div>
					</figcaption>
				</figure>
			</a>
		</li>
		<li>
				<a href="{{index_manset[2].content_url}}">
				<figure class="video-manset-image">
