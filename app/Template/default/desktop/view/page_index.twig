</div>


<main id="main-video-container">
	<div class="videos-content">
		<ul class="videos-box">
			{% for i in 3..6 %}
				<li>
					<a href="{{index_manset[i].content_url}}">
						<figure class="videos-box-image">
							<img
								src="{{G_IMGLINK_APP}}lazy.png"
								data-src="{{index_manset[i].content_image_url}}"
								alt="{{index_manset[i].content_title}}"
								width="232" height="130"
							/>
							<figcaption class="videos-box-caption"></figcaption>
						</figure>
						<div class="videos-box-info">
							<div class="videos-box-title">{{index_manset[i].content_title}}</div>
							<div class="videos-box-watch">{{index_manset[i].content_view_f}} görüntülenme</div>
							<div class="videos-box-date">{{index_manset[i].content_time_f}}</div>
						</div>
					</a>
				</li>
			{% endfor %}
		</ul>
	</div>
	<div class="videos-content">
		<div class="content-title">
			<span class="cat-202"><i class="icon icon-megaphone">&#xe815;</i> Popüler </span>
		</div>
		<ul class="videos-box">
			{% for item in index_most_view %}
				<li>
					<a href="{{item.content_url|raw}}">
						<figure class="videos-box-image">
							<img
								src="{{G_IMGLINK_APP}}lazy.png"
								data-src="{{item.content_image_url}}"
								alt="{{item.content_title}}"
								width="232" height="130"
								/>
							<figcaption class="videos-box-caption"></figcaption>
						</figure>
						<div class="videos-box-info">
							<div class="videos-box-title">{{item.content_title}}</div>
							<div class="videos-box-watch">{{item.content_view_f}} görüntülenme</div>
							<div class="videos-box-date">{{item.content_time_f}}</div>
						</div>
					</a>
				</li>
			{% endfor %}
		</ul>
	</div>

	<div class="videos-content">
		<div class="content-title">
			<span class="cat-201"> <i class="icon">&#xe814;</i> Güncel</span>
		</div>
		<ul class="videos-box" id="results">
			{%include "ajax/ajax_block_content.twig" %}
		</ul>
	</div>
</main>

{%include "ajax/ajax_block_load.twig" with {type:"index"}%}

