<div class="mobile-main-headline">
	<ul class="mobile-main-headline-list" id="mobile-headline-slider">
		{% for item in index_manset_main %}
			<li>
				<a
					href="{{item.content_url}}"
					title="{{item.content_title}}">
					<figure class="mobile-main-headline-list-image">
						<img
							src="{{item.content_image_url}}"
							alt="{{item.content_title}}"
							width="100%" height="auto"
						/>
					</figure>
					<span class="mobile-main-headline-list-icon"></span>
					<div class="mobile-main-headline-list-title-mask">
						<div class="mobile-main-headline-list-title">
							{{item.content_title|raw}}
						</div>
					</div>
				</a>
			</li>
		{% endfor %}
	</ul>
	<div class="mobile-main-headline-pager">
		<ul class="mobile-main-headline-pager-list" id="mobile-headline-pager">
			{% for key, item in index_manset_main %}
				<li>
					<a
							href="{{item.content_url}}"
							title="{{item.content_title}}">
						{{ key+1 }}
					</a>
				</li>
			{% endfor %}
		</ul>
	</div>
</div>

<div class="hy_container">
	<div class="mobile-title">
		<span class="cat-202">Popüler</span>
	</div>
	<div class="news-content">
		<ul class="mobile-block">
			{% for item in index_most_view %}
				<li class="border-100">
					<a href="{{item.content_url}}"
					   title="{{item.content_title}}">
						<figure class="mobile-block-image">
							<img
									src="{{G_IMGLINK_APP}}lazy.png"
									data-src="{{item.content_thumb_url}}"
									alt="{{item.content_title}}"
									width="100%" height="auto"
							/>
						</figure>
						<div class="mobile-block-title">{{item.content_title}}</div>
						<div class="mobile-block-view">{{ item.content_view_f }} görüntülenme</div>
						<div class="mobile-block-date">{{ item.content_time_f }}</div>
					</a>
				</li>
			{% endfor %}
		</ul>
	</div>

	<div class="mobile-title">
		<span class="cat-201">Güncel</span>
	</div>
	<div class="news-content">
		<ul class="mobile-block" id="results">
			{%include "ajax/ajax_mobile_content.twig" %}
		</ul>
	</div>
</div>
{%include "ajax/ajax_block_load.twig" with {type:"index"}%}
<div id="loadMore" class="load-more"><img width="21" height="11" src="{{G_IMGLINK_APP}}more.png" alt="Devamını Gör"/></div>
